	<script>
		var datacontainer = document.getElementById('datacontainer');
		var modelbody = document.getElementById('modelbody');
		var data = null;

		function loadData() {
			let tabledata = "";
			console.log("data are : " + data);
			for (var i = 0; i < data.length; i++) {

				console.log(data[i]);
				//load data here
				tabledata += '<tr><td>' + data[i]["title"] + '</td><td class="d-none d-xl-table-cell">' + data[i]["authUName"] + '</td><td class="d-none d-xl-table-cell">' + data[i]["communityName"] + '</td><td class="d-none d-md-table-cell"><button class="btn btn-success" onclick="return addData(' + i + ')" data-toggle="modal" data-target="#myModal">View</button><button onclick="return  removePost(\''+data[i]["id"]+'\')" class="btn btn-danger ms-2">Remove</button></td></tr>';
				//


			}
			datacontainer.innerHTML = tabledata;
		}



		function getPostsById() {
			let pid = document.getElementById('postid').value;


			$.ajax(
				{
					url: "/posts",
					method: 'POST',
					contentType: 'application/json',
					data: JSON.stringify({ 'type': 'i', 'id': pid }),
					success: function (res) {
						console.log("pid = " + res.m + "data are : " + res.postdata);
						data = JSON.parse(JSON.stringify(res.postdata));
						loadData();
					}
				}
			)
			return false;

		}

		function getByQuery() {

			let campus = document.getElementById('campusName').value

			let sort = document.querySelector('input[name="radio-3"]:checked').value

			console.log('getting data with campus and sort are : ' + campus + sort)


			$.ajax(
				{
					url: "/posts",
					method: 'POST',
					contentType: 'application/json',
					data: JSON.stringify({ 'type': 'q', 'campus': campus, 'sort': sort }),
					success: function (res) {
						console.log("pid = " + res.m + "data are : " + res.postdata);
						data = JSON.parse(JSON.stringify(res.postdata));

						
						loadData();
					}
				}
			)
			return false;

		}

		var hi = 0;

		function addData(position) {
			hi = position;
			console.log("data filling : " + position)
			let datac = "";
			datac += "<p>Images : ";
			for (let i = 0; i < data[position]["images"].length; i++) {
				datac += "<a href='https://firebasestorage.googleapis.com/v0/b/campus-diary-33019.appspot.com/o/PostsMedia%2F" + data[position]["images"][i] + ".jpeg?alt=media' target='_blank' >Image-" + i + " </a>";

			}

			datac += "<p>";

			datac += "<p>title : " + data[position]["title"] + "<p>";
			datac += "<p>Context : " + data[position]["context"] + "<p>";
			datac += "<p>Author username : " + data[position]["authUName"] + "<p>";
			datac += "<p>Creation Date : " + new Date(data[position]["creationDate"] * 1000).toLocaleDateString() + "<p>";
			datac += "<p>post id : " + data[position]["id"] + "<p>";
			datac += "<p>community id : " + data[position]["communityId"] + "<p>";
			datac += "<p>Community Name : " + data[position]["communityName"] + "<p>";

			datac += "<p>Likes : " + data[position]["likes"].length + "<p>";
			datac += "<p>Tags : " + data[position]["tags"] + "<p>";
			modelbody.innerHTML = datac;
			return false;
		}


		function doAction() {
			return removePost(data[hi]["id"])
		}

		function removePost(postid) {
			console.log("i got call");
			var result = window.confirm("Do you really want to remove post with id " + postid + "? you cant recover that post again");
			if (result == true) {
				//remove user
				console.log("remove post");
				$.ajax(
					{
						url: "/posts",
						method: 'POST',
						contentType: 'application/json',
						data: JSON.stringify({ 'type': 'r', 'id': postid }),
						success: function (res) {

							loadData();
						}
					}
				)
				return false;
			}
			return false;
		}

	</script>

